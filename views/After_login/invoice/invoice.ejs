<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link rel="stylesheet" href="../webNode/views/After_login/invoice/style.css" />
</head>
<body>
    <!--First Page-->
    <div class="main0">
        <h1><span>
            SWIM PRECEPTORS
        </span></h1>
        <h4><span>
            "THE NEW WAVE"
        </span></h4>
    </div>
    <div class="main1">
        <div class="container0">
            <h3>TO:<span style="color:black"> <%= JSON.stringify(invoice_details.rents_name).slice(1, JSON.stringify(invoice_details.rents_name).length-1) %></span></h3>
        </div>
        <div class="container1"></div>
            <h3>INVOICE NO.<span style="color:black"> <%= JSON.stringify(invoice_details.invoice_num).slice(1, JSON.stringify(invoice_details.invoice_num).length-1) %></span></h3>
        </div>
        <h5 class="header5">DATE ISSUED:<span style="color:black"> <%= JSON.stringify(invoice_details.DOI).slice(1, JSON.stringify(invoice_details.DOI).length-1) %></span></h5>
    </div>
    <div class="main2">
        <div class="container2">
            <span>DESCRIPTION</span>
            <span>NO.</span>
            <span>PRICE</span>
            <span>AMOUNT</span>
        </div>
    </div>
    <div class="main3">
        <div class="container3">
            <span class="forpdf"><%= JSON.stringify(invoice_details.ceptees_name).slice(1, JSON.stringify(invoice_details.ceptees_name).length-1) %></span>
            <span style="margin-left:200px">01</span>
            <span class="title-gap">$150</span>
            <span>$150</span>
        </div>
        <div class="forpdf">Pair Lesson</div>
        <div class="forpdf">(4 lessons, 45mins)</div><br>
        <div class="forpdf">Starting on 1 April 2022</div>
        <div class="container4">
            <div class="line"></div>
        </div>
        <div class="container5">
            <div class="container6">
                <h3>PAYABLE BY:</h3>
                <h3 style="margin-left:370px">Total:<span style="color:black"> $<input type="text" class="invoice_input"></span></h3>
            </div>
            <p class="name"><%= JSON.stringify(invoice_details.rents_name).slice(1, JSON.stringify(invoice_details.rents_name).length-1) %></p><br>
            <h3>PAYMENT INSTRUCTIONS:</h3>
            <p class="ins">PLEASE TRANSFER TO <strong>UEN T21LL0750B</strong></p>
            <p class="ins">OR USING THE <strong>SGQR CODE</strong> BELOW :)</p>
        </div>
        <img src="../webNode/views/After_login/invoice/preceptors.jpg" alt="preceptors.jpg" class="icon" width="55" height="65">
    </div>
    <div class="main4">
        <div>
            <span class="main4-gap"><strong>ADDRESS</strong></span>
            <p>Blk No.17</p>
            <p>17 Lorong Lew Lian</p>
        </div>
        <div>
            <span class="main4-gap"><strong>CONTACT</strong></span>
            <p>+65 9653 4967</p>
            <p>swimpreceptors@gmail.com</p>
        </div>
        <div>
            <span class="main4-gap"><strong>FIND US</strong></span>
            <p>www.swimpreceptors.com</p>
            <p>IG: @swimpreceptors_</p>
            <p>FB: SwimPreceptors</p>
        </div>
    </div>
    <!--Second Page-->
    <div class="main5">
        <div>
            <img src="../webNode/views/After_login/invoice/SGQR_Logo.png" alt="SGQR_Logo">
        </div>
        <div class="container7">
            <h4>210614314A51</h4>
            <h4>Ver 01.0001</h4>
        </div>
    </div>
    <div class="main6">
        <h2>SWIM PRECEPTORS LLP</h2>
        <img src="../webNode/views/After_login/invoice/qrcode.jpg" alt="qrcode" width="450" height="450">
        <button type="button" id="button">SCAN TO PAY</button>
    </div>
    <div class="main7">
        <img src="../webNode/views/After_login/invoice/bankofchina.png" alt="bankofchina" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/citibank.png" alt="citibank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/dbsbank.png" alt="dbsbank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/hsbcbank.png" alt="hsbcbank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/icbcbank.png" alt="icbcbank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/maybank.png" alt="maybank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/ocbcbank.png" alt="ocbcbank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/paynow.png" alt="paynow" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/standardcharbank.png" alt="standardcharbank" class="banklogo" width="80.2" height="82">
        <img src="../webNode/views/After_login/invoice/uobbank.png" alt="uobbank" class="banklogo" width="80.2" height="82">
    </div>
</body>
</html>